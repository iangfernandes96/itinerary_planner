[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = .git,__pycache__,build,dist,*.egg-info
per-file-ignores =
    # Ignore missing docstrings in __init__ files
    __init__.py:D104
    # Ignore missing docstrings in tests
    tests/*:D100,D101,D102,D103
docstring-convention = google
max-complexity = 10
